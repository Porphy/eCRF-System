    = csrf_meta_tags


  %body
    = render 'shared/top_bar'
    = render 'shared/notify'

    .row.main
      .columns
        = yield

    -# .row.footer-wrap
    -#   = render 'shared/footer'

    = javascript_include_tag 'delay', 'data-turbolinks-track' => true
    = yield :add_js
